<div class="min-h-screen bg-gray-50 py-12">
  <div class="max-w-3xl mx-auto px-4 sm:px-6 lg:px-8">
    <div class="bg-white rounded-2xl shadow-sm overflow-hidden">
      <!-- En-tête du formulaire -->
      <div class="px-8 py-6 border-b border-gray-100">
        <h1 class="text-2xl font-bold text-gray-900">Proposer un plat</h1>
        <p class="mt-2 text-sm text-gray-600">
          Partagez votre talent culinaire avec vos voisins. Remplissez le formulaire ci-dessous pour proposer votre plat.
        </p>
      </div>

      <!-- Formulaire -->
      <div class="px-8 py-6">
        <%= form_with(model: @dish, class: "space-y-8") do |f| %>
          <!-- Nom du plat -->
          <div>
            <div class="flex items-center justify-between">
              <%= f.label :name, "Nom du plat", class: "block text-sm font-medium text-gray-700" %>
              <span class="text-sm text-red-500">*</span>
            </div>
            <%= f.text_field :name,
                required: true,
                class: "mt-1 block w-full rounded-lg border-gray-300 shadow-sm focus:border-blue-500 focus:ring-blue-500 sm:text-sm",
                placeholder: "ex: Lasagnes maison" %>
          </div>

          <!-- Description -->
          <div>
            <div class="flex items-center justify-between">
              <%= f.label :description, "Description", class: "block text-sm font-medium text-gray-700" %>
              <span class="text-sm text-red-500">*</span>
            </div>
            <%= f.text_area :description,
                required: true,
                rows: 4,
                class: "mt-1 block w-full rounded-lg border-gray-300 shadow-sm focus:border-blue-500 focus:ring-blue-500 sm:text-sm",
                placeholder: "Décrivez votre plat, sa préparation, etc." %>
          </div>

          <!-- Prix et portions -->
          <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
            <!-- Prix -->
            <div>
              <div class="flex items-center justify-between">
                <%= f.label :price, "Prix par portion (€)", class: "block text-sm font-medium text-gray-700" %>
                <span class="text-sm text-red-500">*</span>
              </div>
              <div class="mt-1 relative rounded-lg shadow-sm">
                <%= f.number_field :price,
                    required: true,
                    min: 0,
                    step: 0.5,
                    class: "block w-full rounded-lg border-gray-300 pl-3 pr-12 focus:border-blue-500 focus:ring-blue-500 sm:text-sm",
                    placeholder: "0.00" %>
                <div class="absolute inset-y-0 right-0 pr-3 flex items-center pointer-events-none">
                  <span class="text-gray-500 sm:text-sm">€</span>
                </div>
              </div>
            </div>

            <!-- Portions -->
            <div>
              <div class="flex items-center justify-between">
                <%= f.label :portions, "Nombre de portions", class: "block text-sm font-medium text-gray-700" %>
                <span class="text-sm text-red-500">*</span>
              </div>
              <%= f.number_field :portions,
                  required: true,
                  min: 1,
                  class: "mt-1 block w-full rounded-lg border-gray-300 shadow-sm focus:border-blue-500 focus:ring-blue-500 sm:text-sm",
                  placeholder: "1" %>
            </div>
          </div>

          <!-- Ingrédients -->
          <div>
            <div class="flex items-center justify-between">
              <label class="block text-sm font-medium text-gray-700">Ingrédients</label>
              <span class="text-sm text-red-500">*</span>
            </div>
            <div class="mt-1">
              <%= f.text_field :ingredients,
                  required: true,
                  class: "block w-full rounded-lg border-gray-300 shadow-sm focus:border-blue-500 focus:ring-blue-500 sm:text-sm",
                  placeholder: "Ex: Tomates, Oignons, etc." %>
            </div>
          </div>

          <!-- Disponibilité -->
          <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
            <!-- Date de début -->
            <div>
              <div class="flex items-center justify-between">
                <%= f.label :available_from, "Disponible à partir de", class: "block text-sm font-medium text-gray-700" %>
                <span class="text-sm text-red-500">*</span>
              </div>
              <%= f.datetime_field :available_from,
                  required: true,
                  class: "mt-1 block w-full rounded-lg border-gray-300 shadow-sm focus:border-blue-500 focus:ring-blue-500 sm:text-sm" %>
            </div>

            <!-- Date de fin -->
            <div>
              <div class="flex items-center justify-between">
                <%= f.label :available_until, "Disponible jusqu'à", class: "block text-sm font-medium text-gray-700" %>
                <span class="text-sm text-gray-500">(optionnel)</span>
              </div>
              <%= f.datetime_field :available_until,
                  class: "mt-1 block w-full rounded-lg border-gray-300 shadow-sm focus:border-blue-500 focus:ring-blue-500 sm:text-sm" %>
            </div>
          </div>

          <!-- Bouton de soumission -->
          <div class="pt-4">
            <%= f.submit "Créer le plat",
                class: "w-full flex justify-center py-3 px-4 border border-transparent rounded-lg shadow-sm text-sm font-medium text-white bg-blue-500 hover:bg-blue-600 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500 transition-colors" %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div> 