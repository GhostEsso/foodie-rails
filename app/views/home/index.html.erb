<!-- Hero Section -->
<div class="bg-[#006494] py-32">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 text-center">
    <h1 class="text-4xl md:text-5xl font-bold text-white mb-4">
      Partagez des plats faits<br>
      maison avec vos voisins
    </h1>
    <p class="text-white text-lg mb-8 max-w-3xl mx-auto">
      Découvrez les talents culinaires de votre immeuble et partagez vos propres créations
    </p>
    <div class="flex justify-center space-x-4">
      <%= link_to "Découvrir les plats", "#", class: "bg-white text-[#006494] px-6 py-3 rounded-md font-medium hover:bg-gray-100 transition-colors" %>
      <%= link_to "Créer un compte", "#", class: "bg-transparent border-2 border-white text-white px-6 py-3 rounded-md font-medium hover:bg-white/10 transition-colors" %>
    </div>
  </div>
</div>

<!-- Comment ça marche Section -->
<div class="bg-gray-50 py-20">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <div class="text-center mb-16">
      <h2 class="text-3xl font-bold text-gray-900 mb-4">Comment ça marche ?</h2>
      <p class="text-gray-600">Trois étapes simples pour commencer à partager</p>
    </div>

    <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
      <!-- Étape 1 -->
      <div class="text-center p-8 bg-white rounded-lg border border-gray-200 shadow-sm">
        <div class="w-12 h-12 bg-blue-100 rounded-full flex items-center justify-center text-blue-500 font-bold text-xl mx-auto mb-4">
          1
        </div>
        <h3 class="text-xl font-semibold mb-2">Créez votre compte</h3>
        <p class="text-gray-600">Inscrivez-vous et sélectionnez votre immeuble pour rejoindre votre communauté</p>
      </div>

      <!-- Étape 2 -->
      <div class="text-center p-8 bg-white rounded-lg border border-gray-200 shadow-sm">
        <div class="w-12 h-12 bg-blue-100 rounded-full flex items-center justify-center text-blue-500 font-bold text-xl mx-auto mb-4">
          2
        </div>
        <h3 class="text-xl font-semibold mb-2">Proposez vos plats</h3>
        <p class="text-gray-600">Partagez vos créations culinaires avec vos voisins</p>
      </div>

      <!-- Étape 3 -->
      <div class="text-center p-8 bg-white rounded-lg border border-gray-200 shadow-sm">
        <div class="w-12 h-12 bg-blue-100 rounded-full flex items-center justify-center text-blue-500 font-bold text-xl mx-auto mb-4">
          3
        </div>
        <h3 class="text-xl font-semibold mb-2">Réservez des plats</h3>
        <p class="text-gray-600">Découvrez et réservez les plats proposés par vos voisins</p>
      </div>
    </div>
  </div>
</div>
